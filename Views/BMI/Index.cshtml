@model DemoMvc.Models.BMICalculator

<h2>Tính chỉ số BMI</h2>
<form method="post" asp-action="Calculate">
    <label>Cân nặng (kg):</label>
    <input type="number" step="0.1" name="Weight" required />

    <label>Chiều cao (m):</label>
    <input type="number" step="0.01" name="Height" required />

    <button type="submit">Tính BMI</button>
</form>

@if (ViewBag.BMI != null)
{
    <h3>BMI của bạn: @ViewBag.BMI</h3>
    <p>@ViewBag.Message</p>
}
